@model InternetBanking.Core.Application.ViewModels.Beneficiario.SaveBeneficiarioViewModel

<h2>Agregar Beneficiario</h2>

<!-- Botón para abrir el modal -->
<button class="btn btn-primary" data-toggle="modal" data-target="#AddBeneficiarioModal">Agregar Beneficiario</button>

<!-- Modal para agregar beneficiario -->
<div class="modal fade" id="AddBeneficiarioModal" tabindex="-1" role="dialog" aria-labelledby="AddBeneficiarioModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddBeneficiarioModalLabel">Agregar Beneficiario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Beneficiario" method="post">
                    @* Asegúrate de que el modelo esté vinculado *@
                    @Html.AntiForgeryToken()

                    <!-- Número de Cuenta -->
                    <div class="form-group">
                        <label for="NumeroCuenta">Número de Cuenta</label>
                        <input type="text" class="form-control" id="NumeroCuenta" name="NumeroCuenta" asp-for="NumeroCuenta" required />
                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="text-danger">@ViewData["ErrorMessage"]</div>
                        }
                    </div>

                    @* Propiedades ocultas si es necesario, por ejemplo IdUsuario o IdProductoFinanciero *@
                    <input type="hidden" asp-for="IdProductoFinanciero" />
                    <input type="hidden" asp-for="IdUsuario" />

                    <button type="submit" class="btn btn-primary">Agregar</button>
                </form>
            </div>
        </div>
    </div>
</div>
